<p>EMPTY ORDER FORM:</p>
<form method="post" action="/pizza-orders">
  <label for="first-name">First Name:</label>
  <input type="text" id="first-name" name="first_name"/>

  <label for="last-name">Last Name:</label>
  <input type="text" id="last-name" name="last_name"/>

  <label for="topping">Topping Type:</label>
  <select id="topping" name="topping">
    <option value="pepperoni">Pepperroni</option>
    <option value="hawaiian">Hawaiian</option>
    <option value="vegetarian">Vegetarian</option>
    <option value="italian sausage">Italian Sausage</option>
  </select>

  <label for="quantity">Quantity:</label>
  <input type="number" id="quantity" name="quantity"/>

  <input type="submit" value="Order Pizza"/>
</form>
